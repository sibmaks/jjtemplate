  "template": {
    "trueAndTrueKey": "{{ and .trueVar, .trueVar }}",
    "trueAndTruePipeKey": "{{ .trueVar | and .trueVar }}",

    "trueAndFalseKey": "{{ and .trueVar, .falseVar }}",
